<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/fl_full_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_radio"
        android:layout_weight="1"
      />
    <RadioGroup
        android:id="@+id/main_radio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="2dp">

        <RadioButton
            android:id="@+id/rb_home_page"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/selector_shouye"
            android:text="@string/tab_function" />

        <RadioButton
            android:id="@+id/rb_local_page"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/selector_shouye"
            android:text="@string/tab_news_center" />

        <RadioButton
            android:id="@+id/rb_language_page"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/selector_shouye"
            android:text="@string/tab_smart_service" />

        <RadioButton
            android:id="@+id/rb_wifi_page"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/selector_shouye"
            android:text="@string/tab_gov_affairs" />

        <RadioButton
            android:id="@+id/rb_myinfo_page"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/selector_shouye"
            android:text="@string/tab_setting" />
    </RadioGroup>

</RelativeLayout>