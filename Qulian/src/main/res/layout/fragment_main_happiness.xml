<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_systembar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:id="@+id/tv_happiness_title_loaction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="北京"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/myTab"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/bt_recommend_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:textSize="13sp"
                android:text="推荐线路"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_hot_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bt_recommend_route"
                android:paddingLeft="5dp"
                android:text="热门商品"
                android:textSize="13sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_sousuo_nor" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_find_condition"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/iv_happiness_find"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_sousuo_nor" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_happiness_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>