<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_item_bg_normal"
    android:orientation="vertical"
    android:padding="8dp">
    <!-- 第一行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_tuan_quality_icon"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_erweima_nor"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/iv_tuan_quality_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:lines="2"
                    android:text="为了部落,一起加油！"
                    android:textColor="@color/app_main_title"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/iv_tuan_quality_subNname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:textColor="@color/app_main_sub_title_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tuan_deal_currentprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥60"
                        android:textColor="@color/app_main_collor"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="15dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="#999999" />

                        <TextView
                            android:id="@+id/tv_tuan_deal_oldprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/app_main_sub_title_text"
                            android:text="￥60"
                            android:textSize="12sp" />
                    </FrameLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_tuan_sale_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nisafd"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/app_main_title_text"
                    android:textSize="16sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>